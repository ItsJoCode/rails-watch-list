<div class="container">
  <h2>My list</h2>
  <div class="cards">
    <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
      <p><%= link_to list.name, list_path(list)%></p>
      <%# <%= link_to '<i class="fa-solid fa-trash-can"></i>'.html_safe, list_path(list),
                  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
    </div>
    <% end %>
  </div>
</div>

